@model Book
<h2>Add New Book</h2>

<form style="display: flex; flex-direction:column;gap:15px; margin-Top:20px; max-width:26rem; width:100%;" action="/books/addbook" method="post">
  <div class="form-group">
    <label for="Name" asp-for="Title"></label>
    
    <input asp-for="Title" class="form-control"  id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter book title">
    <span asp-validation-for="Title" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label for="Name" asp-for="Author"></label>
    <input asp-for="Author" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter book title">
  </div>
  <div class="form-group">
    <label for="Name" asp-for="Publisher"></label>
    <input asp-for="Publisher" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter book title">
  </div>
  <div class="form-group">
    <label for="Name" asp-for="Price"></label>
    <input asp-for="Price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter book title">
  </div>
  <div class="form-group">
    <label for="Name" asp-for="Edition"></label>
    <input asp-for="Edition" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter book title">
  </div>
  <div class="form-group">
    <label for="Name" asp-for="Language"></label>
    <input asp-for="Language" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter book title">
  </div>
  <div class="form-group">
    <label for="Name" asp-for="PublishedDate"></label>
    <input asp-for="PublishedDate" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter book title">
  </div>
  <div style=" width:10rem;margin-left:7rem;padding-bottom:10px;">
 <button type="submit" class="btn btn-primary">ADD</button>
  </div>
</form>